{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "yarn": ">=1.12.1"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna run clean --stream && lerna clean -y",
        "dev": "cross-env NODE_ENV=development lerna run build:dev --stream && yarn watch",
        "build": "cross-env NODE_ENV=production lerna run build",
        "bundle": "cross-env NODE_ENV=production run-s clean bootstrap build && copy.bat",
        "watch": "lerna run watch --parallel --stream --concurrency 999",
        "coverage": "jest --coverage",
        "unit": "jest -c config/jest.config.js --watch",
        "test": "jest -c config/jest.config.js --watch",
        "eslint": "eslint .",
        "lint": "eslint .",
        "storybook": "start-storybook -p 9009",
        "build-storybook": "build-storybook -o build/storybook",
        "doc": "jsdoc packages -c config/jsdoc.config.js",
        "docserve": "jsdoc packages -c config/jsdoc.config.js && serve build/jsdoc/root"
    },
    "devDependencies": {
        "@babel/core": "^7.7.7",
        "@babel/plugin-external-helpers": "^7.7.4",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-transform-runtime": "^7.7.6",
        "@babel/preset-env": "^7.7.7",
        "@babel/preset-react": "^7.7.4",
        "@rollup/plugin-commonjs": "^11.0.0",
        "@rollup/plugin-json": "^4.0.1",
        "@rollup/plugin-node-resolve": "^7.0.0",
        "@rollup/plugin-replace": "^2.3.0",
        "@storybook/addon-actions": "^5.2.8",
        "@storybook/addon-docs": "^5.2.8",
        "@storybook/addon-info": "^5.2.8",
        "@storybook/addon-links": "^5.2.8",
        "@storybook/addon-notes": "^5.2.8",
        "@storybook/addons": "^5.2.8",
        "@storybook/react": "^5.2.8",
        "@storybook/storybook-deployer": "^2.8.1",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.4.0",
        "@testing-library/user-event": "^8.0.2",
        "@types/jest": "^24.0.25",
        "@types/node": "^13.1.1",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^2.14.0",
        "@typescript-eslint/parser": "^2.14.0",
        "@umijs/hooks": "^1.5.3",
        "autoprefixer": "^9.7.3",
        "babel-jest": "^24.9.0",
        "copyfiles": "^2.1.1",
        "cross-env": "^6.0.3",
        "cssnano": "^4.1.10",
        "customize-cra": "^0.9.1",
        "date-fns": "^2.9.0",
        "docdash": "^1.1.1",
        "eslint": "^6.8.0",
        "eslint-config-get-off-my-lawn": "^5.0.1",
        "eslint-plugin-react": "^7.17.0",
        "html-react-parser": "^0.10.0",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "jest-haste-map": "^24.9.0",
        "jest-resolve": "^24.9.0",
        "jest-styled-components": "^6.3.4",
        "jsdoc": "^3.6.3",
        "lerna": "^3.19.0",
        "less": "^3.10.3",
        "lint-staged": "^9.5.0",
        "mitt": "^1.2.0",
        "node-sass": "^7.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-app-rewired": "^2.1.5",
        "react-dom": "^16.12.0",
        "react-grid-layout": "^0.17.1",
        "react-router-dom": "^5.1.2",
        "react-use": "^13.21.0",
        "rollup": "^1.27.14",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-clear": "^2.0.7",
        "rollup-plugin-eslint": "^7.0.0",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-terser": "^5.1.3",
        "rollup-plugin-visualizer": "^3.3.1",
        "serve": "^11.3.0",
        "storybook-readme": "^5.0.8",
        "styled-components": "^4.4.1",
        "stylelint": "^12.0.1",
        "stylelint-config-get-off-my-lawn": "^2.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.9.0",
        "typescript": "^3.7.4",
        "webpack-bundle-analyzer": "^3.6.0"
    },
    "dependencies": {
        "@babel/runtime": "^7.7.7",
        "core-js": "3"
    },
    "husky---": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged---": {
        "*.{js,jsx,ts,tsx,json,md,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "abc": false
}
